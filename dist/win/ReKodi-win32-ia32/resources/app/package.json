{
  "name": "rekodi",
  "version": "0.1.0",
  "main": "main.js",
  "description": "A cross platform desktop remote for Kodi/Xbmc",
  "author": "Bram van Oploo <bram@sudo-systems.com>",
  "contributors": [
    {
      "name": "Bram van Oploo",
      "email": "bram@sudo-systems.com"
    }
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "clean": "rm -rf ./dist",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:win": "rm -rf ./dist/win",
    "build": "npm run clean && npm run build:osx && npm run build:win",
    "build:osx": "npm run clean:osx && electron-packager . \"ReKodi\" --out=dist/osx --platform=darwin --arch=x64 --version=0.29.2 --icon=assets/osx/rekodi.icns",
    "build:win": "npm run clean:win && electron-packager . \"ReKodi\" --out=dist/win --platform=win32 --arch=ia32 --version=0.29.2 --icon=assets/win/icon.ico",
    "pack": "npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run build:osx && electron-builder \"dist/osx/ReKodi-darwin-x64/ReKodi.app\" --platform=osx --out=\"dist/osx\" --config=packager.json",
    "pack:win": "npm run build:win && electron-builder \"dist/win/ReKodi-win32-ia32\" --platform=win --out=\"dist/win\" --config=packager.json"
  },
  "dependencies": {
    "electron-builder": "^2.0.0",
    "wiredep": "^2.2.2",
    "xbmc-event-client": "^0.0.2",
    "xbmc-ws": "^2.1.2",
    "electron-prebuilt": "^0.29.2",
    "electron-packager": "^5.0.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@git.sudo-systems.com:sudo-systems/rekodi.git"
  },
  "bugs": {
    "url": "http://git.sudo-systems.com/sudo-systems/rekodi/issues"
  },
  "keywords": [
    "kodi",
    "xbmc",
    "remote",
    "cross-platform",
    "windows",
    "linux",
    "osx"
  ],
  "private": true
}
